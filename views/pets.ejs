                        <div class="textContainer">
                            <h3>Breed: Rottweiler</h3>
                            <p>Age: 6 years</p>
                            <p>Gender: Male</p>
                            <p>Gets along with: Other dogs</p>
                            <p>Extra Information: Protective yet affectionate.</p>
                        </div>
                        <button class="interestedButton">Interested</button>
                    </div>

                    <div class="pets">
                        <div class="imageContainer">
                            <img class="petImage" src="/images/pet9.webp" alt="German Shepherd dog">
                        </div>
                        <div class="textContainer">
                            <h3>Breed: German Shepherd</h3>
                            <p>Age: 2 years</p>
                            <p>Gender: Female</p>
                            <p>Gets along with: Other dogs</p>
                            <p>Extra Information: Intelligent and loyal</p>
                        </div>
                        <button class="interestedButton">Interested</button>
                    </div>

                    <%for(var i = 0; i<petInfo.length; i++){%>
                        <%if(petInfo[i][2] == "dog"){%>
                            <div class="pets">
                                <div class="imageContainer">
                                    <img class="petImage" src="./images/comingSoon.png" alt="Image coming soon">
